<?xml version='1.0'?>
<page xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:noNamespaceSchemaLocation='urn:magento:framework:View/Layout/etc/page_configuration.xsd'>
	<head>
		<css src='Dfe_ZoomVe::css/main.css'/>
	</head>
	<body>
		<referenceBlock name='checkout.root'>
			<arguments>
				<argument name='jsLayout' xsi:type='array'>
					<item name='components' xsi:type='array'>
						<item name='checkout' xsi:type='array'>
							<item name='children' xsi:type='array'>
								<item name='steps' xsi:type='array'>
									<item name='children' xsi:type='array'>
										<item name='shipping-step' xsi:type='array'>
											<item name='children' xsi:type='array'>
												<item name='shippingAddress' xsi:type='array'>
													<item name='config' xsi:type='array'>
														<item name='shippingMethodItemTemplate' xsi:type='string'>Dfe_ZoomVe/checkout/shipping-address/shipping-method-item</item>
														<item name='shippingMethodListTemplate' xsi:type='string'>Dfe_ZoomVe/checkout/shipping-address/shipping-method-list</item>
													</item>
													<item name='children' xsi:type='array'>
														<item name='shippingAdditional' xsi:type='array'>
															<item name='component' xsi:type='string'>uiComponent</item>
															<item name='displayArea' xsi:type='string'>shippingAdditional</item>
															<item name='children' xsi:type='array'>
																<item name='select_office' xsi:type='array'>
																	<item name='component' xsi:type='string'>Dfe_ZoomVe/js/view/checkout/shipping/select-office</item>
																</item>
															</item>
														</item>
													</item>
												</item>
											</item>
										</item>
									</item>
								</item>
								<item name='sidebar' xsi:type='array'>
									<item name='children' xsi:type='array'>
										<item name='summary' xsi:type='array'>
											<item name='children' xsi:type='array'>
												<item name='totals' xsi:type='array'>
													<item name='children' xsi:type='array'>
														<item name='shipping' xsi:type='array'>
															<item name='config' xsi:type='array'>
																<item name='template' xsi:type='string'>Dfe_ZoomVe/checkout/summary/shipping</item>
															</item>
														</item>
													</item>
												</item>
											</item>
										</item>
										<item name='shipping-information' xsi:type='array'>
											<item name='config' xsi:type='array'>
												<item name='template' xsi:type='string'>Dfe_ZoomVe/checkout/shipping-information</item>
											</item>
										</item>
									</item>
								</item>
							</item>
						</item>
					</item>
				</argument>
			</arguments>
		</referenceBlock>
	</body>
</page>